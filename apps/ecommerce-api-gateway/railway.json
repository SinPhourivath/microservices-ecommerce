{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/ecommerce-api-gateway/Dockerfile"
    },
    "deploy": {
        "startCommand": "node dist/apps/ecommerce-api-gateway/main.js",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}